import pygame
import sys
from collections import deque

pygame.init()

# setting the player class
class Player:
    def __init__(self, x, y, img, l, h):
        self.x = x
        self.y = y
        self.img = img
        self.l = l
        self.h = h
        self.img = pygame.transform.scale(img, (l,h))
        self.rect = pygame.Rect(self.x, self.y, self.l, self.h)

    def update(self):
        self.rect = pygame.Rect(self.x, self.y, self.l, self.h)


bullet = pygame.image.load("C:\Python\Space_invaders\Images\Bullet.png")
bullet_rect = bullet.get_rect()

class Bullet:
    x = 0
    y = 0

# setting the screen
SCREEN_HEIGHT = 500
SCREEN_WIDTH = 500

screen = pygame.display.set_mode([SCREEN_HEIGHT, SCREEN_WIDTH])

clock = pygame.time.Clock()
FPS = 60



player = Player((SCREEN_WIDTH/2)-(35/2), (SCREEN_HEIGHT - 100), pygame.image.load("C:\Python\Space_invaders\Images\playerShip.png"), 40, 35)
player_Xchange = 0

fired = False

# deque for holding current bullets and setting a fire rate
bullets = deque()
milli_sec_between_shots = 750
last_shot_time = 0


def fire_bullet():
    global last_shot_time
    last_shot_time = pygame.time.get_ticks()
    new_bullet = Bullet()
    new_bullet.x = player.x + 46
    new_bullet.y = player.y - 10
    bullets.append(new_bullet)
    screen.blit(bullet, (new_bullet.x -28, new_bullet.y + 7))

# game loop
running = True
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
            pygame.display.quit()
            pygame.quit()
            sys.exit()
        elif event.type == pygame.KEYDOWN:
            if event.key == pygame.K_LEFT or event.key == pygame.K_a:
                player_Xchange = -5
            elif event.key == pygame.K_RIGHT or event.key == pygame.K_d:
                player_Xchange = 5
            elif event.key == pygame.K_SPACE:
                current_time = pygame.time.get_ticks()
                # only allow firing if enough time passed
                if current_time > last_shot_time + milli_sec_between_shots:
                    fire_bullet()
            

                
            elif event.key == pygame.K_ESCAPE == pygame.WINDOWCLOSE:
                running = False

        elif event.type == pygame.KEYUP:
            if event.key == pygame.K_LEFT and event.key == pygame.K_a and event.key == pygame.K_RIGHT and event.key == pygame.K_d:
                player_Xchange = 0
    
    player.x += player_Xchange


    screen.fill([0,0,0])
    
    screen.blit(player.img, (player.x, player.y))
    
    for a_bullet in bullets:
        a_bullet.y -= 9
        screen.blit(bullet, (a_bullet.x - 28, a_bullet.y + 7))

    if bullets and bullets[0].y <= 0:
        bullets.popleft()


    

    pygame.display.flip()

    clock.tick(FPS)

    if player.x <= 16:
        player.x = 16
    elif player.x >= 450:
        player.x = 450

sys.exit(0)
